<form method="post" action="{{ path('app_language_delete', {'id': language.id}) }}" onsubmit="return confirm('Are you sure you want to delete this language?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ language.id) }}">
    <button class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded transition duration-300 ease-in-out">Delete</button>
</form>